                android:layout_weight="1"
                android:background="@drawable/ic_tile_hover" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/tbl_one">

            <Button
                android:textStyle="bold|italic"
