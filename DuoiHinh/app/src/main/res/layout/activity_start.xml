<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="6dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_avatar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_avatar" />

        <TextView
            android:id="@+id/txt_heart"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_heart"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_level"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="0"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:gravity="center">

        <Button
            android:layout_centerHorizontal="true"
            android:id="@+id/btn_play"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@drawable/button_play_press" />

        <TableRow
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/btn_play"
            android:layout_height="50dp"
            android:layout_width="match_parent">
            <Button
                android:layout_marginRight="20dp"
                android:background="@drawable/profile_icon_profile"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"/>
            <Button
                android:layout_marginRight="20dp"
                android:background="@drawable/icon_cup"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"/>
            <Button
                android:layout_marginRight="20dp"
                android:background="@drawable/button_about_normal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"/>
            <Button
                android:background="@drawable/btn_sound"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"/>
        </TableRow>
    </RelativeLayout>



</RelativeLayout>
