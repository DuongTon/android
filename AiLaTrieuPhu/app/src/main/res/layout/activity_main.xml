<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/atp__activity_home_background"
    tools:context="theson.com.ailatrieuphu.activity.MainActivity">

   <LinearLayout
       android:gravity="center"
       android:layout_weight="2"
       android:layout_width="match_parent"
       android:layout_height="0dp">
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:layout_gravity="center"
               android:src="@drawable/atp__icon_logo_in_app"
               android:layout_width="180dp"
               android:layout_height="match_parent" />
           <ImageView
               android:id="@+id/img_light_logo"
               android:src="@drawable/atp__bg_circle_anim"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />
       </FrameLayout>
   </LinearLayout>

    <LinearLayout
        android:layout_marginTop="72dp"
        android:orientation="vertical"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="#6e0f1d"
                android:layout_width="64dp"
                android:layout_height="2dp" />
            <Button
                android:id="@+id/btn_play"
                android:background="@drawable/state_bg_menu_game_trial"
                android:layout_width="250dp"
                android:layout_height="50dp" />
            <TextView
                android:background="#6e0f1d"
                android:layout_width="64dp"
                android:layout_height="2dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="#FF021E29"
                android:layout_width="64dp"
                android:layout_height="2dp" />
            <Button
                android:id="@+id/btn_login"
                android:background="@drawable/state_bg_menu_game_login"
                android:layout_width="250dp"
                android:layout_height="50dp" />
            <TextView
                android:background="#FF021E29"
                android:layout_width="64dp"
                android:layout_height="2dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
