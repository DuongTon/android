<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/state_item"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/imgFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/shape_folder"
            android:padding="8dp"
            android:src="@drawable/ic_folder" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgFolder1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@drawable/shape_folder"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_folder"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_marginBottom="4dp"
                android:id="@+id/txtFolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Storage"
                android:textColor="#ababab"
                android:textSize="16sp" />
            <TextView
                android:layout_below="@+id/txtFolder"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:gravity="right"
                android:id="@+id/txtDate"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Time"
                android:textColor="#ababab"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtSize"
                android:textColor="#ababab"
                android:textSize="12sp"
                android:layout_below="@+id/txtFolder"
                android:text="Size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:background="#ece4e4"
        android:layout_width="match_parent"
        android:layout_height="0.25dp" />
</LinearLayout>
