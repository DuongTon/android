                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tbl_two">

            <Button
                android:textStyle="bold|italic"
                android:id="@+id/btn_answer_09"
                android:layout_width="0dp"
