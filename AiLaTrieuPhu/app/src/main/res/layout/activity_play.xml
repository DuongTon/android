<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="theson.com.ailatrieuphu.activity.PlayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/atp__activity_player_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF210030"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_no_image" />

                <TextView
                    android:id="@+id/txtkhach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@+id/img_avatar"
                    android:layout_toRightOf="@+id/img_avatar"
                    android:text="Khách"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtkhach"
                    android:layout_toEndOf="@+id/img_avatar"
                    android:layout_toRightOf="@+id/img_avatar"
                    android:text="Thí sinh"
                    android:textColor="#fff"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ProgressBar
                    android:id="@+id/progress_time_down"
                    style="@android:style/Widget.ProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:progress="100"
                    android:progressDrawable="@android:color/holo_orange_light" />

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="30"
                    android:textColor="#fff"
                    android:textSize="26sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/img_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/atp__activity_profile_icon_money" />

                    <TextView
                        android:id="@+id/txt_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_toEndOf="@+id/img_money"
                        android:layout_toRightOf="@+id/img_money"
                        android:text="0"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_exit_game"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/state_bg_exit_game" />

                <ImageView
                    android:id="@+id/btn_change_question"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/state_bg_change_question" />

                <ImageView
                    android:id="@+id/btn_5050"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/state_bg_5050" />

                <ImageView
                    android:id="@+id/btn_ask_audience"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/state_bg_audience" />

                <ImageView
                    android:id="@+id/btn_call"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/state_bg_call" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/txt_question"
                        android:layout_width="wrap_content"
                        android:layout_height="180dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/atp__activity_player_layout_play_question_background"
                        android:gravity="center"
                        android:padding="32dp"
                        android:text="Ðây là nội dung"
                        android:textColor="#f4dc28"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_num_questions"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="64dp"
                        android:layout_marginRight="64dp"
                        android:background="@drawable/atp__activity_player_layout_play_order_question"
                        android:gravity="center"
                        android:text="Câu 1"
                        android:textColor="#FF210030"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_answer_a"
                            android:background="@drawable/atp__activity_player_layout_play_answer_background_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp" />
                        <TextView
                            android:id="@+id/txt_a"
                            android:layout_marginStart="25dp"
                            android:layout_marginLeft="25dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A: "
                            android:textColor="#fff" />

                        <TextView
                            android:layout_centerInParent="true"
                            android:id="@+id/txt_answer_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:textColor="#fff" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_answer_b"
                            android:background="@drawable/atp__activity_player_layout_play_answer_background_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp" />
                        <TextView
                            android:id="@+id/txt_b"
                            android:layout_marginStart="25dp"
                            android:layout_marginLeft="25dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="B: "
                            android:textColor="#fff" />

                        <TextView
                            android:layout_centerInParent="true"
                            android:id="@+id/txt_answer_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:textColor="#fff" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_answer_c"
                            android:background="@drawable/atp__activity_player_layout_play_answer_background_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp" />
                        <TextView
                            android:id="@+id/txt_c"
                            android:layout_marginStart="25dp"
                            android:layout_marginLeft="25dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="C: "
                            android:textColor="#fff" />

                        <TextView
                            android:layout_centerInParent="true"
                            android:id="@+id/txt_answer_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:textColor="#fff" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_answer_d"
                            android:background="@drawable/atp__activity_player_layout_play_answer_background_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp" />
                        <TextView
                            android:id="@+id/txt_d"
                            android:layout_marginStart="25dp"
                            android:layout_marginLeft="25dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="D: "
                            android:textColor="#fff" />

                        <TextView
                            android:layout_centerInParent="true"
                            android:id="@+id/txt_answer_d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:textColor="#fff" />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
