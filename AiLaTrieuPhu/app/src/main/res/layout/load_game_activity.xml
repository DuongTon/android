<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/atp__activity_home_background"
    tools:context="theson.com.ailatrieuphu.activity.MainActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/atp__icon_logo_in_app"
                android:layout_width="180dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/img_light_logo"
                android:src="@drawable/atp__bg_circle_anim"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
       <ImageView
           android:id="@+id/img_avatar"
           android:src="@drawable/ic_no_image"
           android:layout_width="64dp"
           android:layout_height="64dp" />
        <TextView
            android:id="@+id/txt_name"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            style="@style/TextAppearance.AppCompat.Title"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/img_avatar"
            android:layout_toRightOf="@+id/img_avatar"
            android:textColor="#fff"
            android:text="Khách"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_thisinh"
            android:layout_below="@+id/txt_name"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            style="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="italic"
            android:layout_toEndOf="@+id/img_avatar"
            android:layout_toRightOf="@+id/img_avatar"
            android:textColor="#fff"
            android:text="Thí sinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_money"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/txt_thisinh"
            android:layout_toEndOf="@+id/img_avatar"
            android:layout_toRightOf="@+id/img_avatar"
            android:src="@drawable/atp__activity_profile_icon_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_money"
            android:layout_toEndOf="@+id/img_money"
            android:layout_toRightOf="@+id/img_money"
            android:layout_below="@+id/txt_thisinh"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            style="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="1.2 Triệu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_sao"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/txt_thisinh"
            android:layout_toEndOf="@+id/txt_money"
            android:layout_toRightOf="@+id/txt_money"
            android:src="@drawable/atp__activity_profile_icon_achievement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toEndOf="@+id/img_sao"
            android:layout_toRightOf="@+id/img_sao"
            android:layout_below="@+id/txt_thisinh"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            style="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:gravity="center"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
