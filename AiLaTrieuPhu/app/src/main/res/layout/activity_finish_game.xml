<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_finish_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF262626"
    tools:context="theson.com.ailatrieuphu.activity.FinishGameActivity">

    <RelativeLayout
        android:background="#FF1F1F1F"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/meta__action_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toEndOf="@+id/img_back"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_back"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="#fff"
            android:text="Kết quả"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_heart"
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/meta__icon_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:text="11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/TextAppearance.AppCompat.Large.Inverse"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#FF8F3AAF"
                android:text="Chúc mừng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/ic_no_image"
                android:layout_width="64dp"
                android:layout_height="64dp" />
            <TextView
                android:textColor="#fff"
                style="@style/TextAppearance.AppCompat.Title"
                android:textStyle="bold"
                android:text="Khách"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#fff"
                android:textStyle="italic"
                android:text="Thí sinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:background="#313131"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:text="cảm ơn bạn đã tham gia chương trình "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_number_finish"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:text=" Chúc bạn may mắn lần sau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="8dp"
                android:textColor="#fff"
                android:text="Thưởng câu hỏi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_money_vnd"
                style="@style/TextAppearance.AppCompat.Large"
                android:textColor="#FF8F3AAF"
                android:text=" 0 VND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:background="#313131"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:text="Đăng nhập để thách đấu với ban bè"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="#FF021E29"
                    android:layout_width="64dp"
                    android:layout_height="2dp" />
                <Button
                    android:id="@+id/btn_login"
                    android:background="@drawable/atp__button_zalo_login_normal"
                    android:layout_width="250dp"
                    android:layout_height="50dp" />
                <TextView
                    android:background="#FF021E29"
                    android:layout_width="64dp"
                    android:layout_height="2dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
