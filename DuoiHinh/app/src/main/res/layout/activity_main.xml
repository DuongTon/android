                android:layout_weight="1"
                android:background="@drawable/ic_tile_hover" />

            <Button
                android:textStyle="bold|italic"
                android:id="@+id/btn_question_16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_tile_hover" />
        </TableRow>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/frl"
        android:layout_width="310dp"
        android:layout_height="180dp"
        android:layout_below="@+id/btn_next"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/img_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hoidong" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_picture_border" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frl"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/txt_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp" />

        <TableRow
            android:id="@+id/tbl_two"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/txt_display">

            <Button
                android:textStyle="bold|italic"
                android:id="@+id/btn_answer_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tile_empty"
                android:gravity="center"
                android:textSize="20sp" />

            <Button
                android:textStyle="bold|italic"
                android:id="@+id/btn_answer_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tile_empty"
                android:gravity="center"
                android:textSize="20sp" />

